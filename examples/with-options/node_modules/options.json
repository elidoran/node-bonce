// the options file may contain comments thanks to `strip-json-comments`
{

  // bonce options corresponding to the usual cli args
  "bonce" : {
    // `basedir` may be set in either options groups
    "basedir" : ".",
    // "inputFile" : "node_modules/browserify.js",
    "outputFile": "package.browserified.js",
    // may specify `include` or `exclude` (if both, `include` is used)
    // to control which modules are browserified
    // when `inputFile` is specified above then include/exclude are ignored
    "include" : [
      // adding #name specifies the variable name to assign the module to
      // only when generating the input file
      "upper-case#uppercase"
    ]
  },

  // these options are for Browserify
  // there are many options available, see http://browserify.org
  "browserify" : {
    // `basedir` may be set in either options groups
    "basedir" : ".",
    "require" : [
      // Use either object syntax to specify options with the name,
      { "name" : "reverse-string", "options" : {"some":"option"} },
      // or, use strings to only specify names
      "upper-case"
    ],
    "ignore" : [
      // "some-name", "another-name",
      // { "name" : "some-name", "options" : {"some":"options"} }
    ],
    "exclude" : [
      // { "name" : "some-name", "options" : {"some":"options"} },
      // "some-name"
    ],
    "external" : [
      //  { "name" : "some-name", "options" : {"some":"options"} }
    ],
    "transform" : [
      // "some-name"
    ]
  }

}
